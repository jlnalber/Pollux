<Window x:Class="Castor.ShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Castor"
        xmlns:castor="clr-namespace:Castor"
        mc:Ignorable="d"
        WindowState="Normal"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen" 
        Height="800" Width="520" MinHeight="500" MinWidth="300">

    <!-- Shortcuts -->
    <Window.Resources>
        <ResourceDictionary>
            <RoutedUICommand x:Key="Close"/>
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{StaticResource Close}"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource Close}" Executed="Escape"/>
    </Window.CommandBindings>


    <castor:Show x:Name="ShowGrid"/>
</Window>
